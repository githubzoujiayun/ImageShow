<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <declare-styleable name="RoundAngleImageView">
		<attr name="roundWidth" format="dimension" />
		<attr name="roundHeight" format="dimension" />
	</declare-styleable>
	
    <!-- 顶部相对布局 -->
    <style name="top_relativelayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>
    
    <!-- 顶部返回主界面按钮 -->
    <style name="back_home_button">
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/image_back</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    
    <!-- 顶部右边按钮 -->
    <style name="top_right_button">
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/imageshare</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    
    <!-- 顶部居中文字 -->
    <style name="top_layout_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="KADialog1" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item> <!-- 半透明 -->
        <item name="android:background">@color/dialog_transparent</item>
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:backgroundDimEnabled">false</item> <!-- 模糊 -->
    </style>

</resources>